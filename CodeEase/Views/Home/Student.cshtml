@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container-fluid">
    <!-- Dashboard Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-graduation-cap me-2"></i>Student Dashboard</h2>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary" id="dashboardTab">
                        <i class="fas fa-chart-line me-1"></i>Dashboard
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="lessonsTab">
                        <i class="fas fa-book me-1"></i>Lessons
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="progressTab">
                        <i class="fas fa-tasks me-1"></i>Progress
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="quizzesTab">
                        <i class="fas fa-question-circle me-1"></i>Quizzes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Overview -->
    <div id="dashboardContent" class="tab-content">
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 id="totalLessons">0</h4>
                                <p class="mb-0">Total Lessons</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-book fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 id="completedLessons">0</h4>
                                <p class="mb-0">Completed</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 id="progressPercentage">0%</h4>
                                <p class="mb-0">Progress</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-chart-pie fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 id="recentQuizzes">0</h4>
                                <p class="mb-0">Recent Quizzes</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-question-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-clock me-2"></i>Recent Progress</h5>
                    </div>
                    <div class="card-body">
                        <div id="recentProgress" class="list-group list-group-flush">
                            <!-- Recent progress items will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-trophy me-2"></i>Recent Quiz Results</h5>
                    </div>
                    <div class="card-body">
                        <div id="recentQuizResults" class="list-group list-group-flush">
                            <!-- Recent quiz results will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lessons Content -->
    <div id="lessonsContent" class="tab-content" style="display: none;">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5><i class="fas fa-book me-2"></i>Available Lessons</h5>
                        <div class="input-group" style="width: 300px;">
                            <input type="text" class="form-control" id="lessonSearch" placeholder="Search lessons...">
                            <button class="btn btn-outline-secondary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="lessonsList" class="row">
                            <!-- Lessons will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Progress Content -->
    <div id="progressContent" class="tab-content" style="display: none;">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-tasks me-2"></i>Learning Progress</h5>
                    </div>
                    <div class="card-body">
                        <div id="progressList">
                            <!-- Progress items will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quizzes Content -->
    <div id="quizzesContent" class="tab-content" style="display: none;">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-question-circle me-2"></i>Quiz History</h5>
                    </div>
                    <div class="card-body">
                        <div id="quizHistory">
                            <!-- Quiz history will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lesson Modal -->
<div class="modal fade" id="lessonModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lessonModalTitle">Lesson Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="lessonContent">
                    <!-- Lesson content will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="markCompleteBtn">Mark as Complete</button>
                <button type="button" class="btn btn-primary" id="takeQuizBtn" style="display: none;">Take Quiz</button>
            </div>
        </div>
    </div>
</div>

<!-- Quiz Modal -->
<div class="modal fade" id="quizModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="quizModalTitle">Quiz Title</h5>
                <div id="quizTimer" class="badge bg-warning ms-3" style="display: none;">
                    Time: <span id="timeRemaining">00:00</span>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="quizContent">
                    <!-- Quiz content will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submitQuizBtn">Submit Quiz</button>
            </div>
        </div>
    </div>
</div>

<!-- Loading Spinner -->
<div id="loadingSpinner" class="text-center" style="display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p class="mt-2">Loading...</p>
</div>

<style>
.tab-content {
    animation: fadeIn 0.3s ease-in-out;
}

@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

.lesson-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.lesson-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.progress-bar-animated {
    animation: progress-bar-stripes 1s linear infinite;
}

.quiz-question {
    border-left: 4px solid #007bff;
    padding-left: 15px;
    margin-bottom: 20px;
}

.quiz-option {
    cursor: pointer;
    padding: 10px;
    border: 1px solid #dee2e6;
    border-radius: 5px;
    margin-bottom: 5px;
    transition: background-color 0.2s;
}

.quiz-option:hover {
    background-color: #f8f9fa;
}

.quiz-option.selected {
    background-color: #e3f2fd;
    border-color: #2196f3;
}
</style>

<script src="~/js/student.js"></script>